{
    "name": "hypetechpl/php-html-parser",
    "type": "library",
    "description": "An HTML DOM parser. It allows you to manipulate HTML. Find tags on an HTML page with selectors just like jQuery.",
    "keywords": ["html", "dom", "parser"],
    "homepage": "https://github.com/hypetechpl/php-html-parser",
    "license": "MIT",
    "authors": [
        {
            "name": "Gilles Paquette",
            "email": "paquettg@gmail.com",
            "homepage": "http://gillespaquette.ca"
        },
        {
            "name": "HypeTech.pl",
            "email": "biuro@hypetech.pl",
            "homepage": "http://www.hypetech.pl"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-mbstring": "*",
        "paquettg/string-encode": "~1.0.0",
        "ext-zlib": "*",
        "ext-curl": "*",
        "myclabs/php-enum": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1.1",
        "mockery/mockery": "^1.2",
        "php-coveralls/php-coveralls": "^2.1",
        "infection/infection": "^0.28.1",
        "phan/phan": "^5.4.3"
    },
    "autoload": {
        "psr-4": {
            "PHPHtmlParser\\": "src/PHPHtmlParser"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": false
        }
    }
}
